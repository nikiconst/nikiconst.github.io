{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/nikiconst/nikiconst.github.io/main/project/arrivals-GDPgrowth(%25)(2).csv"
    },
    "width": 400,
    "height": 300,
    "encoding": {"x": {"field": "Date", "type": "temporal"}},
    "layer": [
      {
        "encoding": {
          "color": {"field": "Symbol", "type": "nominal"},
          "y": {"field": "Values(%)", "type": "quantitative"}
        },
        "layer": [
          {"mark": "line"},
          {
            "transform": [{"filter": {"param": "hover", "empty": false}}],
            "mark": "point"
          }
        ]
      },
      {
        "transform": [
          {"pivot": "Symbol", "value": "Values(%)", "groupby": ["Date"]}
        ],
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.3, "param": "hover", "empty": false},
            "value": 0
          },
          "tooltip": [
            {"field": "Total arrivals(%change)", "type": "quantitative"},
            {"field": "GDPgrowth(%)", "type": "quantitative"}
          ]
        },
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "fields": ["Date"],
              "nearest": true,
              "on": "mouseover",
              "clear": "mouseout"
            }
          }
        ]
      }
    ],
    "config": {}
  }